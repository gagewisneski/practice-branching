<h1>Create category</h1>

<%= form_tag "/categories", method: :post do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>

  <div>
    <%= label_tag :admin_name %>
    <%= text_field_tag :admin_name %>
  </div>

  <div>
    <%= label_tag :thing1 %>
    <%= text_field_tag :thing1 %>
  </div>

  <div>
    <%= label_tag :thing2 %>
    <%= text_field_tag :thing2 %>
  </div>

  <div>
    <%= label_tag :thing3 %>
    <%= text_field_tag :thing3 %>
  </div>

  <%= submit_tag "Submit" %>

<% end %>