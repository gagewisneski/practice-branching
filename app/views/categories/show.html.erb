<h1>Categories</h1>

<h2><%= @category.name %></h2>
<h4><%= @category.description %></h4>
<h4><%= @category.admin_name %></h4>
<h4><%= @category.thing1 %></h4>
<h4><%= @category.thing2 %></h4>
<h4><%= @category.thing3 %></h4>
<% @category.products.each do |product| %>
  <%= link_to "/products/#{product.id}", "#{product.name}" %><%= "$#{product.price}" %>
<% end %>

<%= link_to "/categories/#{@category.id}/edit", edit %>
<%= link_to "/categories/#{@category.id}", delete, method: :delete %>