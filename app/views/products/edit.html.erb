<%= form_tag "/products/#{@product.id}", method: :patch do %>

<form class="form-inline">

  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, placeholder: "Name", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price,  @product.price, placeholder: "Price", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, placeholder: "Description", class: "form-control"%>
 </div>

  <div class="form-group">
    <%= label_tag :supplier %>
    <%= text_field_tag :supplier, @product.supplier, placeholder: "Supplier", class:"form-control" %>
  </div>

  <div>
    <%= submit_tag "Submit", class:"btn btn-default"%>
  </div>

<% end %>
